{
    "contentType": "application/vnd.microsoft.card.adaptive",
    "content": {
        "type": "AdaptiveCard",
        "version": "1.0",
        "body": [
            {
                "type": "Image",
                "altText": "",
                "url": ""
            },
            {
                "type": "TextBlock",
                "text": "In the chat just type one of the following: panda, dog, cat",
                "wrap": true
            },
            {
                "type": "TextBlock",
                "text": "Otherwise just select from dropdown menu below!",
                "wrap": true
            },
            {
                "type": "Input.ChoiceSet",
                "placeholder": "What would you like to see next?",
                "choices": [
                    {
                        "title": "Panda",
                        "value": "panda"
                    },
                    {
                        "title": "Dog",
                        "value": "dog"
                    },
                    {
                        "title": "Cat",
                        "value": "cat"
                    },
                    {
                        "title": "I'm Aussie",
                        "value": "koala"
                    }
                ],
                "value": "",
                "id": "nextAnimal" 
            },
            {
                "type": "TextBlock",
                "text": "Would you like to see something else?"
            },
            {
                "type": "Input.Text",
                "id": "userWish",
                "placeholder": "Type what would you like to see..."
            },
            {
                "type": "ActionSet",
                "actions": [
                    {
                        "type": "Action.Submit",
                        "title": "Give me another one"
                    }
                ]
            }
        ],
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
    }
}